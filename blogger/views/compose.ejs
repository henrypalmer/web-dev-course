<%- include("partials/header"); -%>
<h1>Compose</h1>

<form action="/compose" method="post">
  <div class="form-group">
    <label>Title</label>
    <input class="form-control" type="text" name="titleOfPost" placeholder="Title">
    <label>Body</label>
    <textarea class="form-control" name="bodyOfPost" placeholder="Body" rows="10" cols="150"></textarea>
  </div>
  <button class="btn btn-primary" type="submit" name="publishButton">Publish</button>
</form>






