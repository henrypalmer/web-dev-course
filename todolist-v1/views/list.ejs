<%- include("header") -%>
  <div class='box' id="heading">
    <h1>To-Do for <%=listTitle%>:</h1>
  </div>


  <div class="box">
    <% for (var i in newListItems) { %>
    <div class="item">
      <input type="checkbox">
      <p><%= newListItems[i] %></p>
    </div>
    <% } %>


    <form class="input-form item" action="/" method="post">
      <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
      <button type="submit" name="list" value=<%= listTitle %>>+</button>
    </form>
  </div>



<%- include("footer") -%>
